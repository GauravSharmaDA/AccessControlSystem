@model AccessControlSystem.Core.AccessPolicy

@{
    ViewData["Title"] = "Add new access policy";
}
<div class="row">
    <div class="col-sm-12">
        <h2>Add Security Policy</h2>
    </div>
    <div class="col-sm-12">
       @using (@Html.BeginForm("AddAccessPolicy", "Management", FormMethod.Post))
       {    <div class="form-group">
                <label for="inputPolicyName">Policy Name:</label>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            </div>
            <div class="form-group col-sm-12">                
                <input type="submit" class="form-control" name="submit" value="Add Policy" />
            </div>
       }
    </div>
</div>